{
  "name": "systemAdmin",
  "base": "User",
  "idInjection": "true",
  "options": {
    "validateUpsert": "true"
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": "true"
    },
    "lastName": {
      "type": "string",
      "required": "true"
    },
    "realms": {
      "type": "string[]"
    }    
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "SystemAccessToken",
      "polymorphic": {
        "foreignKey": "userId",
        "discriminator": "principalType"
      },
      "options": {
        "disableInclude": true
      }
    },
    "siteAdmins": {
      "type": "hasMany",
      "model": "siteAdmin",
      "foreignKey": "siteAdmin_id"
    },
    "websites": {
      "type": "hasMany",
      "model": "website",
      "foreignKey": "systemAdmin_id",
      "through": "siteAdmin"
    },
    "webPages": {
      "type": "hasMany",
      "model": "webPage",
      "foreignKey": "systemAdmin_id",
      "through": "website"
    },
    "editableFields": {
      "type": "hasMany",
      "model": "editableField",
      "foreignKey": "systemAdmin_id",
      "through": "webPage"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "website",
      "principalType": "ROLE",
      "principalId": "systemAdmin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
